{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "My application Name",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register",
      ],
      "program": "${workspaceFolder}\\src\\main.ts",
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
      ]
    }
  ]
}
